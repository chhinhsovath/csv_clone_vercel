# Database Configuration
DB_USER=vercel_user
DB_PASSWORD=your_secure_password_here
DB_NAME=vercel_clone
DATABASE_URL=postgresql://vercel_user:your_secure_password_here@localhost:5432/vercel_clone

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Configuration
API_PORT=9000
NODE_ENV=development

# MinIO Configuration (S3-compatible storage)
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=vercel-deployments

# GitHub OAuth Integration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/github/callback

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:9000

# Build Service Configuration
MAX_BUILD_TIME=3600000  # 1 hour in milliseconds
MAX_BUILD_SIZE=536870912  # 500MB in bytes
BUILD_TIMEOUT=1800000  # 30 minutes

# Function Runtime Configuration
FUNCTION_PORT=3001
FUNCTION_MEMORY_LIMIT=512  # MB
FUNCTION_TIMEOUT=30  # seconds

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@vercel-clone.com

# Domain Configuration
ROOT_DOMAIN=vercel-clone.local
WILDCARD_SUBDOMAIN=*.vercel-clone.local

# SSL Configuration
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem
LE_EMAIL=admin@vercel-clone.local

# Deployment Configuration
DEPLOYMENT_RETENTION_DAYS=30  # Keep deployments for 30 days
AUTO_CLEANUP_ENABLED=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
